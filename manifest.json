{
  "manifest_version": 3,
  "name": "TikTok Video Summarizer",
  "version": "1.0",
  "description": "Summarizes TikTok videos using AI",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.tiktok.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.tiktok.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
} 